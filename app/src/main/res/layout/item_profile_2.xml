<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="0dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="4dp"
    android:foreground="?attr/selectableItemBackground"
    card:cardCornerRadius="2dp"
    card:cardElevation="2dp"
    card:cardUseCompatPadding="false">

    <RelativeLayout
        android:id="@+id/rootView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/name_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:gravity="start|center_vertical"
            android:maxLines="2"
            android:minLines="2"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="16sp"
            tools:text="Profile 1" />

        <FrameLayout
            android:id="@+id/map_container"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/name_view"
            android:layout_margin="4dp"
            android:visibility="gone"
            tools:visibility="visible">

            <com.google.android.gms.maps.MapView
                android:id="@+id/mapView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                card:mapType="hybrid" />

            <View
                android:id="@+id/mapCover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/gray_500" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_view"
            android:layout_margin="4dp"
            android:layout_toEndOf="@id/map_container"
            android:gravity="center"
            android:minHeight="96dp"
            android:orientation="vertical">

            <include layout="@layout/item_layout_conditions_part" />

        </LinearLayout>

    </RelativeLayout>

    <include layout="@layout/item_profile_cover" />

</android.support.v7.widget.CardView>
