<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/time_body"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:divider="?android:listDivider"
    android:orientation="vertical"
    android:showDividers="middle">

    <LinearLayout
        android:id="@+id/days"
        style="@style/MyPreference"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?listPreferredItemHeight"
        android:orientation="vertical"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/days_title"
            style="@style/MyPreferenceTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time_condition_days" />

        <TextView
            android:id="@+id/days_summary"
            style="@style/MyPreferenceSummary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Everyday" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/start_time"
        style="@style/MyPreference"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?listPreferredItemHeight"
        android:orientation="vertical"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/start_time_title"
            style="@style/MyPreferenceTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time_condition_start_time" />

        <TextView
            android:id="@+id/start_time_summary"
            style="@style/MyPreferenceSummary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="00:00" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/end_time"
        style="@style/MyPreference"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?listPreferredItemHeight"
        android:orientation="vertical"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/end_time_title"
            style="@style/MyPreferenceTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time_condition_end_time" />

        <TextView
            android:id="@+id/end_time_summary"
            style="@style/MyPreferenceSummary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="00:00" />
    </LinearLayout>

</LinearLayout>