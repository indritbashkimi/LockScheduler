<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="0dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="4dp"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical"
    card:cardCornerRadius="2dp"
    card:cardElevation="2dp"
    card:cardUseCompatPadding="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:fontFamily="sans-serif-medium"
                android:gravity="start|center_vertical"
                android:maxLines="2"
                android:minLines="2"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="16sp"
                tools:text="Profile 1" />

            <ImageView
                android:id="@+id/options_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                card:srcCompat="@drawable/ic_settings" />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/map_container"
            android:layout_alignParentStart="true"
            android:layout_below="@id/title_layout"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_margin="4dp">

            <com.google.android.gms.maps.MapView
                android:id="@+id/mapView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                card:mapType="hybrid" />

            <View
                android:id="@+id/mapCover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/gray_500" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="96dp"
            android:layout_margin="4dp"
            android:layout_below="@id/title_layout"
            android:layout_toEndOf="@id/map_container"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:tint="@color/ib_textColorDisabled"
                    card:srcCompat="@drawable/ic_lock" />

                <LinearLayout
                    android:id="@+id/lock_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/enter_lock_mode"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-smallcaps"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        tools:text="PIN ****" />

                    <TextView
                        android:id="@+id/exit_lock_mode"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-smallcaps"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        tools:text="Swipe" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/week_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:tint="@color/ib_textColorDisabled"
                    card:srcCompat="@drawable/ic_time" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/monday_circle"
                            android:visibility="gone"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:tint="#80ffffff"
                            card:srcCompat="@drawable/mycircle" />

                        <TextView
                            android:id="@+id/monday"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/ib_textColorSecondary"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="M" />

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/tuesday_circle"
                            android:visibility="gone"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:tint="@color/ib_text_disabled_light"
                            card:srcCompat="@drawable/mycircle" />

                        <TextView
                            android:id="@+id/tuesday"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/ib_textColorSecondary"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="T" />

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/wednesday_circle"
                            android:visibility="gone"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:tint="@color/ib_text_disabled_light"
                            card:srcCompat="@drawable/mycircle" />

                        <TextView
                            android:id="@+id/wednesday"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/ib_textColorSecondary"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="W" />

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/thursday_circle"
                            android:visibility="gone"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:tint="@color/ib_text_disabled_light"
                            card:srcCompat="@drawable/mycircle" />

                        <TextView
                            android:id="@+id/thursday"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/ib_textColorSecondary"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="T" />

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/friday_circle"
                            android:visibility="gone"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:tint="@color/ib_text_disabled_light"
                            card:srcCompat="@drawable/mycircle" />

                        <TextView
                            android:id="@+id/friday"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/ib_textColorSecondary"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="F" />

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/saturday_circle"
                            android:visibility="gone"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:tint="@color/ib_text_disabled_light"
                            card:srcCompat="@drawable/mycircle" />

                        <TextView
                            android:id="@+id/saturday"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/ib_textColorSecondary"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="S" />

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/sunday_circle"
                            android:visibility="gone"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:tint="@color/ib_text_disabled_light"
                            card:srcCompat="@drawable/mycircle" />

                        <TextView
                            android:id="@+id/sunday"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/ib_textColorSecondary"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="S" />

                    </FrameLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:visibility="gone"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:tint="@color/ib_textColorDisabled"
                    card:srcCompat="@drawable/ic_place" />

                <LinearLayout
                    android:id="@+id/place_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/place"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="2"
                        tools:text="WiFi-23" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/wifi_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:tint="@color/ib_textColorDisabled"
                    card:srcCompat="@drawable/ic_wifi" />

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/wifi_connections"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="2"
                        tools:text="WiFi-23" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>
