<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="false">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/lib_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?android:listPreferredItemHeight"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp">

        <TextView
            android:id="@+id/library_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            tools:text="Android Support Library" />

        <TextView
            android:id="@+id/library_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/library_name"
            android:textColor="?attr/colorAccent"
            tools:text="www.google.com" />

        <TextView
            android:id="@+id/library_license"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/library_link"
            android:paddingTop="16dp" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/library_website"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/library_license"
            android:text="@string/website" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/library_full_license"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/library_license"
            android:layout_toStartOf="@+id/library_website"
            tools:text="Apache 2.0" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
