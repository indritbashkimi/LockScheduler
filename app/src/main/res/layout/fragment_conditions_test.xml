<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    app:columnCount="2"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="25dp">


    <ImageView
        android:id="@+id/placeIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        app:srcCompat="@drawable/ic_place"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp" />

    <TextView
        android:id="@+id/place_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="Place"
        android:textSize="16sp"
        app:layout_anchorGravity="center"
        app:layout_gravity="center_vertical"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="27dp" />


    <TextView
        android:id="@+id/textView8"
        style="@style/TextAppearance.AppCompat.Caption"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:ellipsize="end"
        android:gravity="center"
        android:visibility="gone"
        app:layout_columnSpan="2"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:text="Radius:"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/radiusInput"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintLeft_toLeftOf="@+id/mapContainer"
        app:layout_constraintRight_toLeftOf="@+id/radiusInput"
        app:layout_constraintTop_toTopOf="@+id/radiusInput" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/radiusInput"
        android:layout_width="235dp"
        android:layout_height="33dp"
        android:layout_marginTop="8dp"
        android:gravity="start"
        android:inputType="number"
        app:layout_constraintLeft_toRightOf="@+id/textView9"
        app:layout_constraintRight_toLeftOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/mapContainer" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:text="m"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        app:layout_constraintBottom_toBottomOf="@+id/radiusInput"
        app:layout_constraintLeft_toRightOf="@+id/radiusInput"
        app:layout_constraintRight_toRightOf="@+id/mapContainer"
        app:layout_constraintTop_toTopOf="@+id/radiusInput" />

    <Button
        android:id="@+id/button2"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Delete"
        android:visibility="gone"
        app:layout_columnSpan="2"
        app:layout_gravity="end"
        tools:layout_editor_absoluteX="193dp"
        tools:layout_editor_absoluteY="0dp" />


    <ImageView
        android:id="@+id/timeIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:padding="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view"
        app:srcCompat="@drawable/ic_time" />


    <ImageView
        android:id="@+id/wifi_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@drawable/ic_wifi"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/view2"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/wifi_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Wifi"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/wifi_icon"
        app:layout_constraintLeft_toRightOf="@+id/wifi_icon"
        app:layout_constraintTop_toTopOf="@+id/wifi_icon"
        app:layout_gravity="center_vertical" />

    <Button
        android:id="@+id/time_delete"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="Delete"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/wifi_icon" />

    <TextView
        android:id="@+id/time_text"
        android:layout_width="40dp"
        android:layout_height="56dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:gravity="start|center_vertical"
        android:text="Time"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/timeIcon"
        app:layout_constraintTop_toTopOf="@+id/timeIcon"
        tools:layout_editor_absoluteX="80dp" />

    <it.ibashkimi.lockscheduler.ui.widget.MapContainer
        android:id="@+id/mapContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toRightOf="@+id/placeIcon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/placeIcon"
        android:layout_marginLeft="8dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="Button"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radiusInput" />

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/divider_color"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button3" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Temp: this is week view"
        app:layout_constraintHorizontal_bias="0.406"
        app:layout_constraintLeft_toRightOf="@+id/timeIcon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timeIcon" />

    <View
        android:id="@+id/view2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/divider_color"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button4"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginTop="7dp"
        android:text="Button"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        android:layout_marginEnd="8dp" />

</android.support.constraint.ConstraintLayout>